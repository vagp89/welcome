<div class="container">
  <p class="pt-4 pl-5" style="margin-left: -108px;margin-top: 0px;"><%= link_to "Back to mentors", mentors_path, class: "yellow-link" %></p>
  <div class="row">
    <div class="col-md-7">
      <div class="d-flex justify-content-center">
        <h1 class="title d-flex justify-content-center"><span class="emp" style="margin-left: -143px;">MENTOR'S </span>PROFILE</h1>
      </div>
      <div>
        <%= cl_image_tag @mentor.photo.key, class: "rounded card-image shadow"  %>
      </div>
      <div class="card-mentor" style="width: 27rem; margin-top: 30px;">
        <div class="card-body " style="margin-left: -43px;">
          <h2 class="pb-1 title" style="font-size: 25px;margin-left: 57px;margin-right: 8px;margin-top: -10px;margin-bottom: -0.5rem;"><%= @mentor.first_name %> <%= @mentor.last_name %> <span class="font-weight-lighter"><p>Fee: €<%= @mentor.price %> per hour</p></span></h2>
          <% @reviews.each do |review| %>
            <p class="font-weight-lighter" style="margin-left: 59px;"><% review.rating.to_i.times do%>
              <span>⭐️</span>
            <% end %>
          <% end %>
          <p class= "text-justify" style="margin-right: -107px;margin-left: 62px;"><%= @mentor.description %></p>
        </div>

        <div>
          <div class="row">
            <div>
              <p class="lt" style="margin-left: 41px;">REVIEWS</p>
              <ul class="p-0">
                <% @reviews.each do |review| %>
                  <li style="margin-left: 43px;margin-right: -74px;">
                    <p class="font-weight-bold mb-0"><%= current_user.first_name %><span class="lt ml-2">23/12/2019</span></p>
                      <p class="font-weight-lighter"><% review.rating.to_i.times do%>
                        <span>⭐️</span>
                      <% end %></p>
                    <p class="font-weight-lighter"><%= review.content %></p>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm">
      <%= simple_form_for :search, url: mentors_path, method: :get do |f| %>
          <%= text_field_tag :query, params[:query], class: "form-control string required pl-5", placeholder: "search mentors",%>
          <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>

      <div class="card-add" style="text-align: center; width: 59%; height: 160px; margin-top: 89px;margin-left: 65px;">
        <div class="card-add-infos">
          <div class="container">
            <div class="row">
              <div>
                <p class="pt-4">Currently available for appointments!</p>
              </div>
              <div class="d-flex justify-content-center mt-3">
                <button class="d-btn"><%= link_to "Book Consultation", new_mentor_consultation_path(mentor_id: @mentor.id) %></button>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
